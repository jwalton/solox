{
    "name": "solox",
    "version": "1.0.0",
    "description": "MobX without the mob. A state management library for React.",
    "sideEffects": false,
    "main": "./dist/index.js",
    "exports": {
        ".": "./dist/index.js"
    },
    "types": "./dist/index.d.ts",
    "type": "module",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "test": "npm run build && npm run lint && npm run test:unittest",
        "build": "tsc",
        "clean": "rm -rf dist types coverage",
        "test:unittest": "vitest --run",
        "test:coverage": "vitest --coverage",
        "lint": "eslint --ext .ts --ext .tsx src",
        "prepare": "husky install && npm run build",
        "prepublishOnly": "npm run build && npm test",
        "semantic-release": "semantic-release"
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --ext ts --ext tsx"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jwalton/solox.git"
    },
    "keywords": [
        "react",
        "state",
        "MobX",
        "immer"
    ],
    "author": {
        "name": "Jason Walton",
        "email": "dev@lucid.thedreaming.org",
        "url": "https://www.thedreaming.org"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/exegesis-js/jwalton/solox/issues"
    },
    "homepage": "https://github.com/jwalton/solox#readme",
    "devDependencies": {
        "@types/chai": "^5.2.2",
        "@types/node": "^22.18.1",
        "@types/react": "^18.3.24",
        "@types/react-dom": "^18.3.7",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "chai": "^6.0.1",
        "chai-as-promised": "^8.0.2",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "pretty-quick": "^4.2.2",
        "react": "^18.3.1",
        "react-dom": "^19.2.0",
        "semantic-release": "^24.2.8",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "immer": "^10.1.3"
    },
    "peerDependencies": {
        "react": ">= 16.8.0 < 20"
    },
    "volta": {
        "node": "22.19.0"
    }
}
