{
    "compilerOptions": {
        "target": "es2024",
        "module": "node20",
        "lib": ["es2024", "dom"],
        "allowJs": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "stripInternal": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "include": ["src"],
    "exclude": ["**/*.spec.ts"],
    "compileOnSave": true
}
